    "version": "0.2.0",
    "configurations": [
          {
            "name": "Launch Brave",
            "request": "launch",
            "type": "pwa-chrome",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
            "userDataDir": false

        },
        {
            "name": "dawurogna_figurative_speaking",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "dawurogna_figurative_speaking (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "dawurogna_figurative_speaking (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}